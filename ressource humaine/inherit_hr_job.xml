<?xml version="1.0" encoding="utf-8"?> 

    <openerp> 
        <data>
          
        				<!-- hr_job form view-->
        				
        	<record model="ir.ui.view" id="inherit_hr_job_view_form">
	        	<field name="name">inherit_hr_job.form</field>
	            <field name="model">hr.job</field>
	            <field name="inherit_id" ref="hr.view_hr_job_form"/>           
	            <field name="arch" type="xml">
	            	
	            	
	            	<group >
	                	<field name="job_location" class="oe_inline" colspan="4"/>
	                </group>		 
		            

	            	<xpath expr="//button[@name='job_recruitement']" position="replace">
	                	<button name="job_recruitement" invisible="True"/>	 
		            </xpath>
		            
		        	<xpath expr="//button[@name='job_open']" position="replace">
	                	<button name="job_open" invisible="True"/>	 
		            </xpath>
		            
		            <xpath expr="//field[@name='state']" position="replace">
	                	<field name="state" invisible="True" />	 
		            </xpath>
		            
		            
	            
	                <xpath expr="//field[@name='no_of_employee']" position="replace">
	                	<field name="no_of_employee" invisible="True" />
	                		 
		            </xpath>
		            
		            <xpath expr="//field[@name='no_of_recruitment']" position="replace">
	                	<field name="no_of_recruitment" invisible="True" />	 
		            </xpath>
		            
		            <xpath expr="//field[@name='expected_employees']" position="replace">
	                	<field name="expected_employees" invisible="True" />	 
		            </xpath>
		            
		            <xpath expr="//field[@name='department_id']" position="replace">
	                	<field name="department_id" invisible="True" />	 
		            </xpath>
		            
                      
	            </field>
	         </record> 
	     
	     
	     
	    				  
	    				   				
	    	
        </data>  
    </openerp>
